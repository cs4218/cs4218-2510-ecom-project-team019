{
    "name": "ecom",
    "version": "1.0.0",
    "description": "ecommerce rest api",
    "main": "server.js",
    "type": "module",
    "scripts": {
        "start": "node server.js",
        "server": "nodemon server.js",
        "client": "npm start --prefix ./client",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "playwright-dev": "cross-env USE_MEMORY_DB=true concurrently -n server,client -c green,blue \"npm run server\" \"npm run client\"",
        "sonarqube": "sonar-scanner",
        "test": "npm run test:backend && npm run test:frontend",
        "test:frontend": "jest --config jest.frontend.config.js",
        "test:backend": "jest --config jest.backend.config.js"
    },
    "keywords": [],
    "author": "RP",
    "license": "ISC",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "braintree": "^3.22.0",
        "colors": "^1.4.0",
        "concurrently": "^8.2.2",
        "cors": "^2.8.5",
        "date-fns": "^3.3.1",
        "dotenv": "^16.4.1",
        "express": "^4.18.2",
        "express-formidable": "^1.2.0",
        "jsonwebtoken": "^9.0.2",
        "mongodb": "^6.3.0",
        "mongodb-memory-server": "^10.2.2",
        "mongoose": "^8.1.2",
        "morgan": "^1.10.0",
        "nodemon": "^3.0.3",
        "react-icons": "^5.0.1",
        "slugify": "^1.6.6"
    },
    "devDependencies": {
        "@babel/core": "^7.28.4",
        "@babel/preset-env": "^7.28.3",
        "@babel/preset-react": "^7.24.1",
        "@playwright/test": "^1.44.0",
        "@types/jest": "^30.0.0",
        "@types/node": "^20.12.12",
        "babel-jest": "^29.7.0",
        "cross-env": "^10.1.0",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "sonarqube-scanner": "^4.3.0",
        "supertest": "^7.1.4"
    }
}
